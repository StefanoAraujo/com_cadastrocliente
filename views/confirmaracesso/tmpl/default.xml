<?xml version="1.0" encoding="utf-8" ?>
<metadata>
	<layout title="CadastroClientes - Lei de Acesso à Informação">
		<message>CadastroClientes - Lei de Acesso à Informação</message>
	</layout>
	<fields
		name="request"
		addfieldpath="/administrator/components/com_cadastrocliente/models/fields"
	>
		<fieldset name="request">
			<field name="artigo" type="sql" default="5" label="Artigo" query="SELECT id, title as artigo FROM #__content where catid=29 and state=1" key_field="id" >
				<option value="">Selecione um Artigo</option>
			</field>
			<field name="agenda" type="text" default="" label="Dias de atualização" description="Separe as datas por virgula" filter="raw" />
			<field name="email" type="text" default="" label="Email para receber Erros" description="Separe as datas por virgula" filter="raw" />
		</fieldset>
		
	</fields>
</metadata>